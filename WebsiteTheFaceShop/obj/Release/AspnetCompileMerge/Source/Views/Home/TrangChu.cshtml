@{
    ViewBag.Title = "The Face Shop | Welcome To The Face Shop";
}
@model WebsiteTheFaceShop.ViewModels.HomeModel
<div id="main">
    <!-- slider -->

    <div id="carouselExampleAutoplaying" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img style="width: 100%;height:400px;" src="~/root/img/slider1.jpg" class="d-block" alt="...">
            </div>
            <div class="carousel-item">
                <img style="width: 100%;height:450px; object-fit: cover"   src="~/root/img/slider2.png" class="d-block" alt="...">
            </div>
            <div class="carousel-item">
                <img style="width: 100%;height:450px; object-fit: cover"  src="~/root/img/slider3.png" class="d-block" alt="...">
            </div>

            <div class="carousel-item">
                <img style="width: 100%;height:450px; object-fit: cover"  src="~/root/img/slider5.png" class="d-block" alt="...">
            </div>

        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <div id="slider">
        @*<a href="#"><img id="img" style="height:500px" src="~/root/img/slider1.jpg" alt=""></a>*@
        <div class="brand row row2 flex-nowrap align-items-center justify-content-center">
            <div class="text text-center col-xl-4 col-md-2 col-sm-2">
                <a href="">
                    <p class="text-brand1">
                        <h1>thương hiệu</h1>
                    </p>
                    <p class="text-brand2">Nổi bật</p>
                </a>
            </div>

            <div class="logo-brand d-flex align-items-center col-xl-8 col-md-10 col-sm-10">
                <a href="#"><img src="~/root/img/brand_3CE.png" alt=""></a>
                <a href="#"><img src="~/root/img/brand_AFC.png" alt=""></a>
                <a href="#"><img src="~/root/img/brand_AGAPAN.png" alt=""></a>
                <a href="#"><img src="~/root/img/brand_Clinic.png" alt=""></a>
                <a href="#"><img src="~/root/img/brand_PIEU.png" alt=""></a>
                <a href="#"><img src="~/root/img/brand_ADERMA.png" alt=""></a>
            </div>
        </div>
    </div>



    <!-- content -->
    <div id="content" style="background-color:#fff">
        <div class="container-lg">
            <div class="row py-5 container-row">
                <div class="col-md-6 col-sm-6">
                    <a href="#"><img title="Big Sale" src="~/root/img/banner_2.png" alt=""></a>
                </div>
                <div class="col-md-6 col-sm-6">
                    <a href="#"><img title="Big Sale" src="~/root/img/banner_3.png" alt=""></a>
                </div>
            </div>

            <div class="row container-row">
                <div class="text">
                    <h2 class="line">
                        <a href="#">sản phẩm mới</a>
                    </h2>
                </div>
                <div class="list-item ">

                    @*Lấy các sp mới nhất*@
                    @foreach (var item in Model.ListSP.OrderByDescending(x => x.MaSP).Take(5))
                    {
                        <div class="col col-product">
                            <div class="item">
                                <div class="product-img">
                                    <a href="~/SanPham/ChiTietSP/@item.MaSP"><img title="@item.TenSP" src="~/Content/images/@item.TenHinh" alt=""></a>
                                </div>
                                <div class="product-content">
                                    <h3><a title="@item.TenSP" href="~/SanPham/ChiTietSP/@item.MaSP">@item.TenSP</a> </h3>
                                    <div class="product-price">
                                        <span class="new-price">
                                            @string.Format("{0:N0}", @item.DonGiaBan) đ
                                        </span>
                                        <!-- <span class="old-price">

                                        </span> -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="button"><a href="~/SanPham/SanPhamMoi">xem tất cả</a></div>
            </div>


            <div class="row container-row">
                <div class="text">
                    <h2 class="line">
                        <a href="#">sản phẩm hot</a>
                    </h2>
                </div>
                <div class="list-item d-flex align-items-center2">
                    @*Lấy các sp*@
                    @foreach (var item in Model.ListSP.Take(5).ToList())
                    {
                        <div class="col col-product">
                            <div class="item">
                                <div class="product-img">
                                    <a href="~/SanPham/ChiTietSP/@item.MaSP"><img title="@item.TenSP" src="~/Content/images/@item.TenHinh" alt=""></a>
                                </div>
                                <div class="product-content">
                                    <h3><a title="@item.TenSP" href="~/SanPham/ChiTietSP/@item.MaSP">@item.TenSP</a> </h3>
                                    <div class="product-price">
                                        <span class="new-price">
                                            @string.Format("{0:N0}", @item.DonGiaBan) đ
                                        </span>
                                        <!-- <span class="old-price">

                                        </span> -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="button"><a href="~/SanPham/ListSanPham">xem tất cả</a></div>
            </div>


            <div class="row container-row">
                <div class="text">
                    <h2 class="line">
                        <a href="#">HOT DEAL</a>
                    </h2>
                </div>
                <div class="list-item d-flex align-items-center2">
                    @foreach (var item in Model.ListSP.Where(sp => sp.GiamGia != null || sp.GiamGia > 10000).Take(5).ToList())
                    {
                        <div class="col col-product">
                            <div class="item">
                                <div class="product-img">
                                    <a href="~/SanPham/ChiTietSP/@item.MaSP"><img title="@item.TenSP" src="~/Content/images/@item.TenHinh" alt=""></a>
                                </div>
                                <div class="product-content">
                                    <h3><a title="@item.TenSP" href="~/SanPham/ChiTietSP/@item.MaSP">@item.TenSP</a> </h3>
                                    <div class="product-price">
                                        <span class="new-price">
                                            @string.Format("{0:N0}", @item.DonGiaBan) đ
                                        </span>
                                        <!-- <span class="old-price">

                                        </span> -->
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="button"><a href="~/SanPham/KhuyenMai">xem tất cả</a></div>
            </div>

