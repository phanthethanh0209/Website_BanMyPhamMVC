
@{
    ViewBag.Title = "Trang Quản Lý Đơn Hàng";
}

<div class="container-fluid mt-2 ">
    <div class="row text-center ">
        <div class="col bg-white border border-2 rounded-3 p-3 m-2 shadow dboard_custom">
            <p class="fw-bold fs-5">Tổng doanh thu</p>
            <p class="text-danger fw-bold fs-5">@string.Format("{0:N0}", ViewBag.TongDoanhThu) đ</p>
</div>

        <div class="col bg-white border border-2 rounded-3 p-3 m-2 shadow">
            <p class="fw-bold fs-5">Tổng đơn hàng đã đặt</p>
            <p class="text-danger fw-bold fs-5">@ViewBag.TongDon</p>
        </div>

        <div class="col bg-white border border-2 rounded-3 p-3 m-2 shadow">
            <p class="fw-bold fs-5">Tổng số account</p>
            <p class="text-danger fw-bold fs-5">@ViewBag.TongAccount</p>
        </div>

        <div class="col bg-white border border-2 rounded-3 p-3 m-2 shadow">
            <p class="fw-bold fs-5">Sản phẩm hiện có</p>
            <p class="text-danger fw-bold fs-5">@ViewBag.TongSanPham</p>
        </div>


    </div>
</div>

<div class="container-fluid mt-3">
    <h2>Đơn Đặt Hàng</h2>
    <table class="table table-hover table-bordered hdtable">

        <thead class="table-dark">
            <tr>
                <th scope="col">Mã đơn</th>
                <th scope="col">Tên khách hàng</th>
                <th scope="col">Ngày đặt</th>
                <th scope="col">Số điện thoại</th>
                <th scope="col">Địa chỉ</th>
                <th scope="col">Địa chỉ email</th>
                @*<th scope="col">Phương thức thanh toán</th>*@
                <th scope="col">Chi tiết đơn</th>

            </tr>
        </thead>

        <tbody>
        </tbody>
    </table>

</div>



